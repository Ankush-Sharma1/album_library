<table class="table table-dark table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Preview</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% if photos.present? %>
      <% photos.each_with_index do |photo, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= photo.name %></td>
          <td align="center"><%= image_tag(photo.path, class: "", style: "max-width: 300px; height: auto;") %></td>
          <td align="center"><%#= link_to ('<i class="fa fa-trash"></i>').html_safe #desired_path   %>
            <%#= link_to "", controller: "album_photo_path", action: "destroy", id:photo do %>
              <!-- <i class="fa fa-trash fa-10x"></i> -->
            <%# end %>
            <%= link_to "Delete", album_photo_path(@album, photo.id), :method => :delete, data: { confirm: "Are you sure you want to delete this image?" }, :class =>"button btn btn-danger" %>
          </td>
        </tr>
      <% end %>

    <% end %>
  </tbody>
</table>
<div>
<p align="left">
  <%= link_to('Back', albums_path, :class => "button btn btn-primary" )%>
</p>

<p align="top">
  <%= link_to('Logout', destroy_user_session_path, :method => :delete, :class => "button btn btn-danger" )%>
</p>
</div>